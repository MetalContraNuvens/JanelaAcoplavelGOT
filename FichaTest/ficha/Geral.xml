<?xml version="1.0" encoding="UTF-8"?>
<group>
	<flowLayout left="5" top="5" width="250" autoHeight="true">
		<edit vertTextAlign="center" field="nome"/>
		<flowLineBreak/>
		<label width="80" text="Compostura:"/>
		<edit width="30" vertTextAlign="center" field="compostura">

		</edit>
		<flowLineBreak/>
		<label width="80" text="Frustação:"/>
		<edit width="30" vertTextAlign="center" field="frustacao"/>
		<flowLineBreak/>
		<label width="80" text="Fadiga:"/>
		<edit width="30" vertTextAlign="center" field="fadiga"/>
		<flowLineBreak/>
		<label width="80" text="Blefe Passivo:"/>
		<edit width="30" vertTextAlign="center" field="blefar"/>
		<flowLineBreak/>
		<label width="80" text="Atuação Passivo:"/>
		<edit width="80" vertTextAlign="center" field="atuar"/>
		<flowLineBreak/>
		<label width="80" text="Dedicação Passivo:"/>
		<edit width="80" vertTextAlign="center" field="dedicar"/>
		<flowLineBreak/>
		<label width="80" text="Coragem Passivo:"/>
		<edit width="80" vertTextAlign="center" field="coragem"/>
		<flowLineBreak/>
		<label width="80" text="Defesa de Intriga:"/>
		<edit width="80" vertTextAlign="center" field="DI"/>
		<flowLineBreak/>
		<label width="80" text="Postura:"/>
		<comboBox left="90" top="275" width="80" height="20" field="postura" items="{'Afetuoso', 'Amigável', 'Afável', 'Indiferente', 'Desgostosa', 'Inamistosa', 'Maliciosa'}" values="{'1', '2', '3', '4', '5', '6', '7'}" value="4"/>
	</flowLayout>

	<button left="120" top="30" width="65" height="25" text="ENVIAR">
		<event name="onClick">
			local minhaMesa = Firecast.getMesaDe(sheet);

			if minhaMesa.meuJogador.isMestre then
				minhaMesa.chat:enviarMensagemNPC(sheet.nome, sheet.codigoEntrada);
			else
				minhaMesa.chat:enviarMensagem(sheet.codigoEntrada);
			end;
		</event>
	</button>

	<button left="50" top="450" width="150" height="150" text="meArraste">
		<event name="OnStartDrag">
			local valor = {}
			valor.nome = sheet.nome
			valor.compostura = sheet.compostura
			valor.composturaAtual = sheet.compostura
			valor.frustacao = sheet.frustacao
			valor.frustacaoAtual = sheet.frustacao
			valor.fadiga = sheet.fadiga
			valor.fadigaAtual = sheet.fadiga
			valor.blefar = sheet.blefar
			valor.atuar = sheet.atuar
			valor.dedicar = sheet.dedicar
			valor.coragem = sheet.coragem
			valor.postura = sheet.postura
			valor.DI = sheet.DI
			
			drag:addData("ficha", valor);
		</event>
	</button>
</group>